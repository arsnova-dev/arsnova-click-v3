{
  "name": "arsnova-click-v3",
  "version": "0.1.0",
  "private": true,
  "description": "Ein modernes, 100% DSGVO-konformes Audience-Response-System",
  "license": "MIT",
  "author": "Klaus Quibeldey-Cirkel",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev -w @arsnova/backend\" \"npm run start -w @arsnova/frontend\"",
    "dev:backend": "npm run dev -w @arsnova/backend",
    "dev:frontend": "npm run start -w @arsnova/frontend",
    "build": "npm run build -w @arsnova/backend && npm run build -w @arsnova/frontend",
    "lint": "echo 'TODO: Linting konfigurieren'",
    "format": "prettier --write \"**/*.{ts,js,json,html,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,css,scss,md}\"",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "prettier": "^3.2.0",
    "prisma": "^7.4.0"
  },
  "dependencies": {
    "@prisma/client": "^7.4.0"
  }
}
